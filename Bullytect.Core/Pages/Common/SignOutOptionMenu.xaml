<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:helper="clr-namespace:Bullytect.Core.Helpers;assembly=Bullytect.Core"
    x:Class="Bullytect.Core.Pages.Common.SignOutOptionMenu">
	<ContentView.Content>
        <ContentView 
            HorizontalOptions="End"
            VerticalOptions="CenterAndExpand"
            Padding="10"
            BackgroundColor="Transparent">
            <Label 
                Text="{ x:Static helper:FontAwesomeFont.SignOut } "
                FontSize="22"
                TextColor="{ DynamicResource CustomNavBarTextColor }"
                Style="{ StaticResource FontIcon }">

                <Label.TranslationY>
                    <OnPlatform 
                        x:TypeArguments="x:Double" 
                        iOS="10" 
                        Android="0" />
                </Label.TranslationY>
            </Label>
            <ContentView.GestureRecognizers>
                <TapGestureRecognizer Command="{ Binding SignOutCommand }" NumberOfTapsRequired="1" /> 
            </ContentView.GestureRecognizers>
        </ContentView>
	</ContentView.Content>
</ContentView>
